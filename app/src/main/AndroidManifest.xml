<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stevenjkennedy.hotpotatapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameMenu">
            <intent-filter>
                <action android:name="android.intent.action.GAME_MENU" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryMenu">
            <intent-filter>
                <action android:name="android.intent.action.CATEGORY_MENU" />
            </intent-filter>
        </activity>
        <activity android:name=".CoopGame">
            <intent-filter>
                <action android:name="android.intent.action.COOP_GAME" />
            </intent-filter>
        </activity>
    </application>

</manifest>